<h1>Listing mail_templates</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Cc</th>
      <th>Bcc</th>
      <th>Subject</th>
      <th>Header</th>
      <th>Body</th>
      <th>Footer</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_templates.each do |mail_template| %>
      <tr>
        <td><%= mail_template.from %></td>
        <td><%= mail_template.to %></td>
        <td><%= mail_template.cc %></td>
        <td><%= mail_template.bcc %></td>
        <td><%= mail_template.subject %></td>
        <td><%= mail_template.header %></td>
        <td><%= mail_template.body %></td>
        <td><%= mail_template.footer %></td>
        <td><%= mail_template.type %></td>
        <td><%= link_to 'Show', mail_template %></td>
        <td><%= link_to 'Edit', edit_mail_template_path(mail_template) %></td>
        <td><%= link_to 'Destroy', mail_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mail template', new_mail_template_path %>
