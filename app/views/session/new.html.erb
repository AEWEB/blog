<div id="basic" data-role="page">

  <div data-role="header">
    <h1><%= t("login.display_name")%>
    </h1>
  </div>
  <div data-role="content">
	<%= form_for(@user,:url=>{:controller=>"session", :action=>"create"}) do |f| %>
		<% if @user.errors.any? %>
    		<div id="error_explanation">
				<ul>
					<% @user.errors.full_messages.each do |message| %>
     					<li><%= message %></li>
     				 <% end %>
				</ul>
			</div>
		<% end %>
		<div class="field">
			<%= f.label :nickname, t("users.nickname")  %>
			<%= f.text_field :nickname %>
		</div>
		<div class="field">
			<%= f.label :password,t("users.password") %>
			<%= f.password_field :password %>
		</div>
		<div class="actions">
			<%= f.submit "Login","data-theme" => "b", "data-inline" => "true" %>
		</div>
	<% end %>
  </div>
  <%= render 'shared/nonmember_footer' %>
</div>